<div class="card border-success mb-3 text-center" style="max-width: 30rem;">
  <div class="card-header">
    <h1><i class="fas fa-user"></i> <u><%= @user.first_name + " " + @user.last_name  %></u></h1>
  </div>
  <div class="card-body text-info">
    <ul class="card-text list-group">
      <li class="list-group-item">Name : <%= @user.first_name %></li>
      <li class="list-group-item">Last name : <%= @user.last_name %></li>
      <li class="list-group-item">Description : <%= @user.description %></li>
      <li class="list-group-item">Email : <%= @user.email %></li>
      <li class="list-group-item">Age : <%= @user.age %></li>
      <li class="list-group-item">City : <%= link_to @user.city.name , city_path(@user.city.id),:class => ""%></li>
    </ul>
  </div>
</div>